<script>
  let faqs = document.querySelectorAll(".cardfaq");
  faqs.forEach((faq) => {
    faq.addEventListener("click", (event) => {
      let cardText = faq.querySelector(".card-text");
      if (cardText.style.display == "inline") cardText.style.display = "none";
      else cardText.style.display = "inline";
    });
  });
</script>
